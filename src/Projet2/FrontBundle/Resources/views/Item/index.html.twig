{% extends 'FrontBundle::base.html.twig' %}

{% block title %}Catalogue Art.Space{% endblock %}

{% block main %}
<main>
        <section>
            <h1>Nos Produits :</h1>
            {#{ dump(item) }#}
            {% for value in item %}
                <img class="item" src="{{ asset('bundles/front/images/item/' ~ value.img) }}" />
                <div class="itemTexte">
                    <h2><a href="{{ path('item_detail', {'id' : value.id}) }}">{{ value.name }}</a></h2>
                    <h3>{{ value.category.type }}</h3>
                    <p>{{ value.description }}</p>
                </div>
                <div class="clear"></div>
                <hr>
            {% endfor %}
	</section>
</main>
{% endblock %}